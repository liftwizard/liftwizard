{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": ["**/*.json", "**/*.jsonc"],
    "experimentalScannerIgnores": [".llm/**/*", "target/**/*"],
    "ignoreUnknown": true,
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
  },
  "linter": {
    "enabled": false,
  },
  "json": {
    "formatter": {
      "bracketSpacing": false,
    },
  },
  "overrides": [
    {
      "includes": ["**/*.json"],
      "json": {
        "formatter": {
          "trailingCommas": "none",
        },
      },
    },
    {
      "includes": ["**/*.jsonc"],
      "json": {
        "formatter": {
          "trailingCommas": "all",
        },
      },
    },
  ],
}
