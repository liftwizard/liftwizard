{
  "template": "Hello, %s!",
  "defaultName": "Stranger",
  "clock"                    : {
    "type"   : "incrementing"
  },
  "uuid"                     : {
    "type": "seed",
    "seed": "example seed"
  },
  "database": {
    "driverClass": "org.h2.Driver",
    "user": "sa",
    "password": "sa",
    "url": "jdbc:h2:./target/example"
  },
  "server": {
    "applicationConnectors": [
      {
        "type": "http",
        "port": 0
      }
    ],
    "adminConnectors": [
      {
        "type": "http",
        "port": 0
      }
    ]
  },
  "logging": {
    "level": "INFO",
    "appenders": [
      {
        "type"             : "console",
        "timeZone"         : "system",
        "logFormat"        : "%highlight(%-5level) %cyan(%date{HH:mm:ss}) [%white(%thread)] %blue(%marker) {%magenta(%mdc)} %green(%logger): %message%n%red(%rootException)",
        "includeCallerData": true
      },
      {
        "type": "file",
        "currentLogFilename": "./logs/application.log",
        "archivedLogFilenamePattern": "./logs/application-%d-%i.log.gz",
        "archive": true,
        "archivedFileCount": 7,
        "maxFileSize": "1mb"
      },
      {
        "type"                      : "logstash-file",
        "currentLogFilename"        : "./logs/logstash.json",
        "archivedLogFilenamePattern": "./logs/logstash-%d.json",
        "includeCallerData"         : true
      }
    ]
  }
}
